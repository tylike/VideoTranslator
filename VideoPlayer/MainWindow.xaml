<Window x:Class="VideoPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoPlayer"
        mc:Ignorable="d"
        Title="Video Player" Height="720" Width="1280" MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen" Background="#FFF0F0F0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部工具栏 -->
        <Menu Grid.Row="0" Background="#FFF5F5F5">
            <MenuItem Header="文件">
                <MenuItem Header="打开视频" Click="OpenVideo_Click"/>
                <Separator/>
                <MenuItem Header="退出" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="工具">
                <MenuItem Header="下载视频" Click="DownloadVideo_Click"/>
            </MenuItem>
        </Menu>
        
        <!-- 视频播放区域 -->
        <Border Grid.Row="1" Background="Black" Margin="10">
            <local:VideoPlayerControl x:Name="videoPlayerControl"/>
        </Border>
        
        <!-- 底部状态栏 -->
        <StatusBar Grid.Row="2" Background="#FFF5F5F5">
            <StatusBarItem>
                <TextBlock x:Name="statusText" Text="就绪"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>