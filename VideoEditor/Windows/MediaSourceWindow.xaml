<Window x:Class="VideoEditor.Windows.MediaSourceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="媒体源" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <DockPanel Margin="10">
        <ToolBar DockPanel.Dock="Top" Height="35">
            <Button Content="导入" Click="Import_Click" ToolTip="导入媒体文件" Height="25" VerticalAlignment="Center"/>
            <Separator/>
            <Button Content="删除" Click="Delete_Click" ToolTip="删除选中的媒体源" Height="25" VerticalAlignment="Center"/>
            <Separator/>
            <Button Content="编辑名称" Click="EditName_Click" ToolTip="编辑媒体源名称" Height="25" VerticalAlignment="Center"/>
        </ToolBar>
        
        <ToolBar DockPanel.Dock="Top" Height="35" x:Name="dynamicToolBar">
            <TextBlock Text="选中操作: " VerticalAlignment="Center" Margin="5,0,10,0"/>
        </ToolBar>
        
        <ListView DockPanel.Dock="Top" 
                  x:Name="mediaSourceListView" 
                  SelectionMode="Single"
                  Margin="0,10,0,0"
                  SelectionChanged="MediaSourceListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="名称" Width="200" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="类型" Width="120" DisplayMemberBinding="{Binding MediaType}"/>
                    <GridViewColumn Header="文件路径" Width="500" DisplayMemberBinding="{Binding FileFullName}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
