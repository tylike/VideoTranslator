@using MudBlazor
@inject IProjectManagerService ProjectManagerService
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudText>确定要删除项目 "@_projectName" 吗？此操作无法撤销。</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">取消</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Confirm">删除</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance? MudDialog { get; set; }
    [Parameter] public string ProjectId { get; set; } = string.Empty;
    [Parameter] public string ProjectName { get; set; } = string.Empty;
    private string _projectName => ProjectName;

    private void Cancel()
    {
        MudDialog?.Cancel();
    }

    private async Task Confirm()
    {
        try
        {
            var success = await ProjectManagerService.DeleteProjectAsync(ProjectId);
            if (success)
            {
                Snackbar.Add($"项目 \"{ProjectName}\" 已删除", Severity.Success);
                MudDialog?.Close(DialogResult.Ok(true));
            }
            else
            {
                Snackbar.Add("删除项目失败", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"删除项目失败: {ex.Message}", Severity.Error);
        }
    }
}
