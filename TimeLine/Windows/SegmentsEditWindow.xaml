<Window x:Class="TimeLine.Windows.SegmentsEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="编辑片段" 
        Height="500" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="轨道片段编辑" 
                   FontSize="16" 
                   FontWeight="Medium"
                   Margin="0,0,0,15"/>

        <DataGrid Grid.Row="1"
                  Name="segmentsDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Extended"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  IsReadOnly="False"
                  BeginningEdit="SegmentsDataGrid_BeginningEdit">
            <DataGrid.Columns>
                <DataGridTextColumn Header="索引" 
                                    Binding="{Binding Index}" 
                                    Width="60"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="文本" 
                                    Binding="{Binding Text}" 
                                    Width="*"/>
                <DataGridTextColumn Header="开始时间" 
                                    Binding="{Binding Start, StringFormat=hh\\:mm\\:ss\\.fff}" 
                                    Width="120"/>
                <DataGridTextColumn Header="结束时间" 
                                    Binding="{Binding End, StringFormat=hh\\:mm\\:ss\\.fff}" 
                                    Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="添加" 
                    Click="Add_Click" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            <Button Content="删除" 
                    Click="Delete_Click" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            <Button Content="确定" 
                    Click="OK_Click" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            <Button Content="取消" 
                    Click="Cancel_Click" 
                    Width="80" 
                    Height="30"/>
        </StackPanel>
    </Grid>
</Window>
