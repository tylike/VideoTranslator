<Window x:Class="VideoEditor.Windows.YouTubeImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="从YouTube导入" Height="800" Width="750"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="YouTube视频导入" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="视频地址:" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" x:Name="UrlTextBox" Margin="0,0,10,0" VerticalContentAlignment="Center"/>
            <Button Grid.Column="2" x:Name="FetchButton" Content="获取资源" Width="80" Height="25" Click="FetchButton_Click"/>
        </Grid>

        <TextBlock Grid.Row="2" x:Name="VideoInfoTextBlock" Text="" Foreground="Gray" Margin="0,0,0,15" TextWrapping="Wrap" Visibility="Collapsed"/>

        <GroupBox Grid.Row="3" Header="视频" Margin="0,0,0,10" Visibility="Collapsed" x:Name="VideoGroupBox">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <CheckBox Grid.Column="0" x:Name="DownloadVideoCheckBox" Content="下载视频" IsChecked="True" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <ComboBox Grid.Column="1" x:Name="VideoQualityComboBox" Height="25"/>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="4" Header="音频" Margin="0,0,0,10" Visibility="Collapsed" x:Name="AudioGroupBox">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <CheckBox Grid.Column="0" x:Name="DownloadAudioCheckBox" Content="下载音频" IsChecked="True" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <ComboBox Grid.Column="1" x:Name="AudioQualityComboBox" Height="25"/>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="5" Header="字幕" Margin="0,0,0,10" Visibility="Collapsed" x:Name="SubtitleGroupBox">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ListBox Grid.Row="0" x:Name="SubtitleListBox" SelectionMode="Multiple" Height="150">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding DisplayName}" IsChecked="{Binding IsSelected}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                    <Button x:Name="SelectAllButton" Content="全选" Width="80" Height="25" Margin="0,0,10,0" Click="SelectAllButton_Click"/>
                    <Button x:Name="DeselectAllButton" Content="全否" Width="80" Height="25" Click="DeselectAllButton_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="6" Header="语言设置" Margin="0,0,0,10" Visibility="Collapsed" x:Name="LanguageGroupBox">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="源视频语言:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="SourceLanguageComboBox" Height="25"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="目标视频语言:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="TargetLanguageComboBox" Height="25"/>
                </Grid>
            </Grid>
        </GroupBox>

        <Grid Grid.Row="7" x:Name="LoadingPanel" Visibility="Collapsed" Height="200">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="正在获取视频信息..." HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <ProgressBar Width="250" Height="25" IsIndeterminate="True"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="OkButton" Content="确定" Width="80" Height="30" Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True" IsEnabled="False"/>
            <Button x:Name="CancelButton" Content="取消" Width="80" Height="30" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
