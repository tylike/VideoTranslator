<Window x:Class="VideoEditor.Windows.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="输入" Height="150" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   x:Name="promptTextBlock" 
                   Text="请输入:" 
                   Margin="0,0,0,10"/>

        <TextBox Grid.Row="1" 
                 x:Name="inputTextBox" 
                 Height="30" 
                 Padding="5"
                 Margin="0,0,0,15"
                 KeyDown="InputTextBox_KeyDown"/>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="确定" 
                    Click="OK_Click" 
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            <Button Content="取消" 
                    Click="Cancel_Click" 
                    Width="80" 
                    Height="30"/>
        </StackPanel>
    </Grid>
</Window>
