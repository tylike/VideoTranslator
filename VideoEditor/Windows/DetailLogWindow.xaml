<Window x:Class="VideoEditor.Windows.DetailLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="详细日志" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <RichTextBox x:Name="LogRichTextBox"
                     Grid.Row="0"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto">
            <FlowDocument FontFamily="Consolas" FontSize="12">
                <Paragraph x:Name="LogParagraph"/>
            </FlowDocument>
        </RichTextBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <CheckBox x:Name="AutoScrollCheckBox"
                      Content="自动滚动"
                      IsChecked="True"
                      VerticalAlignment="Center"
                      Margin="0,0,20,0"/>
            <Button x:Name="ClearButton"
                    Content="清除"
                    Click="Clear_Click"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"/>
            <Button x:Name="CloseButton"
                    Content="关闭"
                    Click="Close_Click"
                    Width="80"
                    Height="30"/>
        </StackPanel>
    </Grid>
</Window>
