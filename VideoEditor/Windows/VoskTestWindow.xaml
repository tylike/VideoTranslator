<Window x:Class="VideoEditor.Windows.VoskTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vosk语音识别测试" Height="650" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Vosk语音识别测试" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="音频文件" Margin="0,0,0,15">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="WavFilePathTextBox" 
                                     Height="30" 
                                     Padding="5"
                                     IsReadOnly="True"
                                     Grid.Column="0"/>
                            <Button x:Name="BrowseWavButton" 
                                    Content="浏览..." 
                                    Click="BrowseWav_Click" 
                                    Width="80" 
                                    Height="30" 
                                    Margin="10,0,0,0"
                                    Grid.Column="1"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="语音识别模型" Margin="0,0,0,15">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ModelPathTextBox" 
                                     Height="30" 
                                     Padding="5"
                                     IsReadOnly="True"
                                     Grid.Column="0"/>
                            <Button x:Name="BrowseModelButton" 
                                    Content="浏览..." 
                                    Click="BrowseModel_Click" 
                                    Width="80" 
                                    Height="30" 
                                    Margin="10,0,0,0"
                                    Grid.Column="1"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="说话人识别模型（可选）" Margin="0,0,0,15">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="SpkModelPathTextBox" 
                                     Height="30" 
                                     Padding="5"
                                     IsReadOnly="True"
                                     Grid.Column="0"/>
                            <Button x:Name="BrowseSpkModelButton" 
                                    Content="浏览..." 
                                    Click="BrowseSpkModel_Click" 
                                    Width="80" 
                                    Height="30" 
                                    Margin="10,0,0,0"
                                    Grid.Column="1"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="提示词（可选）" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="输入提示词以帮助识别特定内容:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="PromptTextBox" 
                                 Height="80" 
                                 Padding="5"
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="识别过程" Margin="0,0,0,15">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="识别过程中的日志信息:" FontWeight="Bold" Grid.Column="0"/>
                            <Button x:Name="ClearLogButton" 
                                    Content="清空" 
                                    Click="ClearLog_Click" 
                                    Width="80" 
                                    Height="25" 
                                    Margin="10,0,0,0"
                                    Grid.Column="1"/>
                        </Grid>
                        <TextBox x:Name="LogTextBox" 
                                 Height="120" 
                                 Padding="5"
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto"
                                 IsReadOnly="True"
                                 Background="#F0F8FF"
                                 FontFamily="Consolas"
                                 FontSize="11"
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="识别结果" Margin="0,0,0,15">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="识别到的内容:" FontWeight="Bold" Grid.Column="0"/>
                            <Button x:Name="ClearResultButton" 
                                    Content="清空" 
                                    Click="ClearResult_Click" 
                                    Width="80" 
                                    Height="25" 
                                    Margin="10,0,0,0"
                                    Grid.Column="1"/>
                        </Grid>
                        <TextBox x:Name="ResultTextBox" 
                                 Height="150" 
                                 Padding="5"
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto"
                                 IsReadOnly="True"
                                 Background="#F5F5F5"
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button x:Name="StartRecognitionButton"
                    Content="开始识别" 
                    Click="StartRecognition_Click" 
                    Width="100" 
                    Height="35" 
                    Margin="0,0,10,0"/>
            <Button Content="关闭" 
                    Click="Close_Click" 
                    Width="100" 
                    Height="35"/>
        </StackPanel>
    </Grid>
</Window>
