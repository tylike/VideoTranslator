<Window x:Class="VideoEditor.Windows.EditProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="编辑项目信息" Height="750" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="编辑项目信息" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

        <GroupBox Grid.Row="1" Header="基本信息" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="项目名称:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="ProjectNameTextBox" Height="25"/>
                </Grid>

                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="源视频语言:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="SourceLanguageComboBox" Height="25"/>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="目标视频语言:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="TargetLanguageComboBox" Height="25"/>
                </Grid>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="翻译设置" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="翻译风格:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="TranslationStyleComboBox" Height="25"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="系统提示词:" VerticalAlignment="Top" Margin="0,5,0,0"/>
                    <TextBox Grid.Column="1" 
                             x:Name="CustomSystemPromptTextBox" 
                             Height="120" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True" 
                             VerticalScrollBarVisibility="Auto"
                             VerticalContentAlignment="Top"/>
                </Grid>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="3" Header="编码设置" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox Grid.Column="0" x:Name="UseGPUCheckBox" Content="使用 GPU 加速" VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="速度优化级别:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="EncodingPresetComboBox" Height="25"/>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox Grid.Column="0" x:Name="FastSubtitleRenderingCheckBox" Content="极速字幕渲染" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="4" Header="字幕设置" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox Grid.Column="0" x:Name="WriteSourceSubtitleCheckBox" Content="写入源字幕" VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="源字幕类型:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="SourceSubtitleTypeComboBox" Height="25"/>
                </Grid>

                <Grid Grid.Row="2" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox Grid.Column="0" x:Name="WriteTargetSubtitleCheckBox" Content="写入目标字幕" VerticalAlignment="Center"/>
                </Grid>

                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="目标字幕类型:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1" x:Name="TargetSubtitleTypeComboBox" Height="25"/>
                </Grid>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="5" Header="项目路径信息 (只读)" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="项目路径:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="ProjectPathTextBox" IsReadOnly="True" Background="#F0F0F0" Height="22" TextWrapping="NoWrap"/>
                </Grid>

                <Grid Grid.Row="1" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="源视频:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="SourceVideoPathTextBox" IsReadOnly="True" Background="#F0F0F0" Height="22" TextWrapping="NoWrap"/>
                </Grid>

                <Grid Grid.Row="2" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="源音频:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="SourceAudioPathTextBox" IsReadOnly="True" Background="#F0F0F0" Height="22" TextWrapping="NoWrap"/>
                </Grid>

                <Grid Grid.Row="3" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="静音视频:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="SourceMutedVideoPathTextBox" IsReadOnly="True" Background="#F0F0F0" Height="22" TextWrapping="NoWrap"/>
                </Grid>

                <Grid Grid.Row="4" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="人声音频:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="SourceVocalAudioPathTextBox" IsReadOnly="True" Background="#F0F0F0" Height="22" TextWrapping="NoWrap"/>
                </Grid>

                <Grid Grid.Row="5" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="背景音频:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="SourceBackgroundAudioPathTextBox" IsReadOnly="True" Background="#F0F0F0" Height="22" TextWrapping="NoWrap"/>
                </Grid>

                <Grid Grid.Row="6" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="源字幕:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="SourceSubtitlePathTextBox" IsReadOnly="True" Background="#F0F0F0" Height="22" TextWrapping="NoWrap"/>
                </Grid>

                <Grid Grid.Row="7" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="翻译字幕:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="TranslatedSubtitlePathTextBox" IsReadOnly="True" Background="#F0F0F0" Height="22" TextWrapping="NoWrap"/>
                </Grid>

                <Grid Grid.Row="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="输出视频:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" x:Name="OutputVideoPathTextBox" IsReadOnly="True" Background="#F0F0F0" Height="22" TextWrapping="NoWrap"/>
                </Grid>
            </Grid>
        </GroupBox>

        <TextBlock Grid.Row="6" Text="* 路径信息仅供查看，如需修改请使用其他功能" Foreground="Gray" FontSize="12" VerticalAlignment="Top" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="OkButton" Content="保存" Width="80" Height="30" Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="取消" Width="80" Height="30" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
