<ContentControl x:Class="TimeLine.Controls.SimpleTimeLinePanel"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:controls="clr-namespace:TimeLine.Controls">
    <ContentControl.Resources>
        <!-- RulerScrollBar 的默认模板 -->
        <Style TargetType="{x:Type controls:RulerScrollBar}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type controls:RulerScrollBar}">
                        <Grid Background="{TemplateBinding Background}">
                            <!-- 滚动条轨道背景 -->
                            <Border Background="#FFFFFF"
                                    BorderBrush="#E0E6ED"
                                    BorderThickness="0,1,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"/>

                            <!-- 滚动条滑块 -->
                            <Track Name="PART_Track"
                                   IsDirectionReversed="False"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageLeftCommand" Background="Transparent" BorderThickness="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.PageRightCommand" Background="Transparent" BorderThickness="0"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="{x:Type Thumb}">
                                                <Border Background="#7BB3E8"
                                                       BorderBrush="#357ABD"
                                                       BorderThickness="1"
                                                       Margin="0,20,0,4"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                            
                            <!-- 标尺 Canvas (放在最上层，不拦截鼠标事件，固定宽度) -->
                            <controls:RulerCanvas Name="RulerCanvas" Background="Transparent"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Stretch"
                                    IsHitTestVisible="False"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 自定义 ScrollViewer 模板，使用带标尺的滚动条 -->
        <ControlTemplate x:Key="RulerScrollViewerTemplate" TargetType="{x:Type ScrollViewer}">
            <Grid Background="{TemplateBinding Background}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 主内容区域 -->
                <ScrollContentPresenter Grid.Row="0" 
                                        CanContentScroll="{TemplateBinding CanContentScroll}"/>
                
                <!-- 垂直滚动条 -->
                <ScrollBar Name="PART_VerticalScrollBar" 
                           Grid.Row="0"
                           HorizontalAlignment="Right"
                           Orientation="Vertical" 
                           Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                           Cursor="Arrow"
                           Maximum="{TemplateBinding ScrollableHeight}"
                           Minimum="0"
                           ViewportSize="{TemplateBinding ViewportHeight}"
                           Value="{Binding VerticalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                
                <!-- 带标尺的水平滚动条 -->
                <controls:RulerScrollBar Name="PART_HorizontalScrollBar" 
                                         Grid.Row="1"
                                         Orientation="Horizontal" 
                                         Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                         Cursor="Arrow"
                                         Height="45"
                                         Maximum="{TemplateBinding ScrollableWidth}"
                                         Minimum="0"
                                         ViewportSize="{TemplateBinding ViewportWidth}"
                                         Value="{Binding HorizontalOffset, Mode=OneWay, RelativeSource={RelativeSource TemplatedParent}}"
                                         TotalDuration="{Binding TotalDuration, RelativeSource={RelativeSource AncestorType={x:Type ContentControl}}}"
                                         ZoomFactor="{Binding ZoomFactor, RelativeSource={RelativeSource AncestorType={x:Type ContentControl}}}"/>
            </Grid>
        </ControlTemplate>
    </ContentControl.Resources>
    
    <Border Name="OuterBorder" Background="#FFFFFF" BorderBrush="#DEE2E6" BorderThickness="1">
        <Grid Name="MainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 上部：可滚动区域 -->
            <ScrollViewer Name="ScrollViewer"
                          Grid.Row="0"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto">
                <Grid Name="InnerGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 左侧轨道头部 -->
                    <Border Name="LeftBorder"
                            Grid.Column="0"
                            Background="#F8F9FA"
                            BorderBrush="#DEE2E6"
                            BorderThickness="0,0,1,0">
                        <StackPanel Name="LeftPanelStack"/>
                    </Border>

                    <!-- 右侧轨道内容区域 -->
                    <Grid Grid.Column="1" Name="RightContentGrid">
                        <!-- 滚动内容区域（使用自定义模板，标尺集成在滚动条上） -->
                        <ScrollViewer Name="RightScrollViewer"
                                      Template="{StaticResource RulerScrollViewerTemplate}"
                                      HorizontalScrollBarVisibility="Visible"
                                      VerticalScrollBarVisibility="Disabled">
                            <StackPanel Name="RightPanelStack"
                                        Background="#FFFFFF"
                                        HorizontalAlignment="Left"/>
                        </ScrollViewer>

                        <!-- 鼠标悬停指示线（放在最上层） -->
                        <Canvas Name="HoverIndicatorCanvas"
                                IsHitTestVisible="False"
                                Visibility="Collapsed"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                ZIndex="100"
                                Background="Transparent">
                            <Line Name="HoverLine"
                                  Stroke="#FF6B6B"
                                  StrokeThickness="1.5"
                                  StrokeDashArray="4,2"
                                  X1="0" Y1="0" X2="0" Y2="1000"/>
                            <Border Name="HoverTimeBorder"
                                    Background="#212529"
                                    CornerRadius="4"
                                    Padding="6,3"
                                    Margin="5,0,0,0">
                                <TextBlock Name="HoverTimeTextBlock"
                                           Foreground="#FFFFFF"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Text="00:00"/>
                            </Border>
                        </Canvas>
                    </Grid>
                </Grid>
            </ScrollViewer>
            
            <!-- 底部：控制面板 -->
            <Border Name="BottomBorder"
                    Grid.Row="1"
                    Background="#F8F9FA"
                    BorderBrush="#DEE2E6"
                    BorderThickness="0,1,0,0"
                    Padding="12,10">
                <StackPanel Name="BottomStackPanel" Orientation="Horizontal">
                    <TextBlock Name="ZoomTextBlock"
                               Text="缩放:"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"
                               FontSize="13"
                               FontWeight="Medium"
                               Foreground="#495057"/>
                    <Slider Name="ZoomSlider"
                            Minimum="0.1" 
                            Maximum="5.0"
                            Width="200"
                            VerticalAlignment="Center"/>
                    <TextBlock Name="ZoomValueTextBlock"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               Width="50"
                               FontSize="13"
                               FontWeight="Medium"
                               Foreground="#495057"/>
                    
                    <Border Width="1"
                            Height="30"
                            Background="#DEE2E6"
                            Margin="20,0,20,0"
                            VerticalAlignment="Center"/>
                    
                    <TextBlock Name="TracksTextBlock"
                               Text="轨道:"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"
                               FontSize="13"
                               FontWeight="Medium"
                               Foreground="#495057"/>
                    <ComboBox Name="TracksComboBox"
                              Width="250"
                              Height="30"
                              VerticalAlignment="Center">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding Visible}" 
                                              Margin="0,0,10,0"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Title}" 
                                               VerticalAlignment="Center"
                                               FontSize="13"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</ContentControl>
