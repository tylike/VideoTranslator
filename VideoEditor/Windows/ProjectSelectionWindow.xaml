<Window x:Class="VideoEditor.Windows.ProjectSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择项目" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="请选择要处理的项目" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <DataGrid Grid.Row="1" x:Name="ProjectListBox" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" SelectionMode="Single" IsReadOnly="True" Margin="0,0,0,15" MouseDoubleClick="ProjectListBox_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="项目名称" Binding="{Binding ProjectName}" Width="*"/>
                <DataGridTextColumn Header="项目路径" Binding="{Binding ProjectPath}" Width="*"/>
                <DataGridTextColumn Header="当前状态" Binding="{Binding CurrentStatus}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OKButton" Content="确定" Width="80" Height="30" Margin="0,0,10,0" Click="OKButton_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="取消" Width="80" Height="30" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
